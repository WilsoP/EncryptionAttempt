        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Height="204" Margin="248,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="InputLbl" Content="Input" HorizontalAlignment="Left" Margin="38,0,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Outlbl" Content="Output" HorizontalAlignment="Left" Margin="248,0,0,0" VerticalAlignment="Top"/>
